{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">All Movies</h2>
    <div class="row">
        {% for example in movies %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ example.title }}</h5>
            <div class="card-body">
                <p class="card-text">
                    Length: {{ example.lengthMinutes }}min
                </p>
                <p class="card-text">
                    Directed by {{ example.director }}
                </p>
                <a href="/examples/{{ example.id }}" class="btn btn-info">
                    View {{ example.title }}
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}